// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  body      String
  summary   String
  createdAt DateTime
  tags      Tag[]
}

model Tag {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  isProminent Boolean @default(false)
  posts       Post[]
}

model Image {
  id    Int    @id @default(autoincrement())
  name  String @unique
  mime  String
  bytes Bytes
}
